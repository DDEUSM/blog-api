{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ES2022",
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "outDir": "./dist",
    "rootDir": "./",
    "moduleResolution": "Bundler",
    "resolveJsonModule": true
  },
  "include": ["server/**/*", "server/*.json"],
  "tsc-alias": {
    "verbose": false,
    "resolveFullPaths": true,
    "fileExtensions": {
      "inputGlob": "{js,jsx,mjs}",
      "outputCheck": ["js", "json", "jsx", "mjs"]
    }
  }
}
